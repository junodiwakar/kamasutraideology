<% if blogs.any? %>
  <hr class="mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Health</h2>
    <div>
      <%= link_to blogs_path(category:'Health') , class:"text-decoration-none" do %>
      <i class="fa fa-sharp fa-regular fa-arrow-right me-2 "></i> 
      View all
      <% end  %>
    </div>
  </div>
<% end %>
<div class="row">
  <% blogs&.limit(3).each do |blog| %>
    <div class="col-md-4">
      <%= link_to blog_path(blog), class: 'card mb-3 text-decoration-none text-dark' do %>
        <% if blog.image.present? %>
          <%= image_tag blog.image, class: 'card-img-top' %>
        <% else %>
          <%= image_tag 'ivf2.jpg', class: 'card-img-top' %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= blog.headline %></h5>
          <p class="card-text"><%= blog.description.to_plain_text.truncate(150) %></p>
          <p class="card-text"><small class="text-muted"><%= blog.created_at.strftime("%Y-%m-%d") %></small></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
