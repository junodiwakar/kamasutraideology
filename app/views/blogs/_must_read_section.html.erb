<div class="row">
    <div class="col-lg-7">
        <% if blogs.any? %>
            <hr class="mt-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Must Read</h2>
                <div>
                <%= link_to blogs_path, class:"text-decoration-none" do %>
                <i class="fa fa-sharp fa-regular fa-arrow-right me-2 "></i> 
                View all
                <% end  %>
                </div>
            </div>
        <% end %>
        <% blogs&.limit(4).each do |blog| %>
            <%= link_to blog_path(blog), class: 'text-decoration-none text-dark' do %>
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <% if blog.image.present? %>
                                <%= image_tag blog.image, class: 'img-fluid rounded-start', style:"height: 100%;" %>
                            <% else %>
                                <%= image_tag 'ivf2.jpg', class: 'img-fluid rounded-start', style:"height: 100%;" %>
                            <% end %>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= blog.headline %></h5>
                                <p class="card-text"><%= blog.description.to_plain_text.truncate(100) %></p>
                                <p class="card-text"><small class="text-muted"><%= blog.created_at.strftime("%Y-%m-%d") %></small></p>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
    <div class="col-lg-5">
        <hr class="mt-4">
        <div class="text-center">
            <h2 class="">Automobile</h2>
        </div>
        <div class="p-3">
            <div class="card">
                <% if @blogs.first.image.present? %>
                    <%= image_tag @blogs.first.image, class: 'card-img-top' %>
                <% else %>
                    <%= image_tag 'ivf2.jpg', class: 'icard-img-top' %>
                <% end %>
                <div class="card-body">
                    <h5 class="card-title"><%=@blogs.first.headline %></h5>
                    <p class="card-text"><%= @blogs.first.description.to_plain_text.truncate(100)%></p>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-md-6 pe-0">
                    <div class="card">
                        <% if @blogs.second.image.present? %>
                            <%= image_tag @blogs.second.image, class: 'card-img-top' %>
                        <% else %>
                            <%= image_tag 'ivf2.jpg', class: 'icard-img-top' %>
                        <% end %>
                        <div class="card-body">
                            <h5 class="card-title"><%=@blogs.second.headline %></h5>
                            <p class="card-text"><%= @blogs.second.description.to_plain_text.truncate(100)%></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 ps-0">
                    <div class="card">
                        <% if @blogs.third.image.present? %>
                            <%= image_tag @blogs.third.image, class: 'card-img-top' %>
                        <% else %>
                            <%= image_tag 'ivf2.jpg', class: 'icard-img-top' %>
                        <% end %>
                        <div class="card-body">
                            <h5 class="card-title"><%=@blogs.third.headline %></h5>
                            <p class="card-text"><%= @blogs.third.description.to_plain_text.truncate(100)%></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
