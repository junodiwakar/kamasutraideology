<%# Main home image %>
<div class="container mt-4">
  <div class="row">
    <div class="col-lg-6 pe-lg-0">
      <div class="card bg-dark text-white h-100">
        <% if @blogs.first.image.present? %>
          <%= image_tag @blogs.first.image, class: 'card-img h-100' %>
        <% else %>
          <%= image_tag 'ivf2.jpg', class: 'card-img h-100' %>
        <% end %>
        <div class="card-img-overlay d-flex flex-column justify-content-end p-3">
          <h5 class="card-title"><%=@blogs.first.headline %></h5>
          <p class="card-text"><%= @blogs.first.description.to_plain_text.truncate(100)%></p>
          <p class="card-text"><small><%= @blogs.first.updated_at %></small></p>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card mb-2">
        <div class="row g-0">
          <div class="col-md-4">
            <% if @blogs.second.image.present? %>
              <%= image_tag @blogs.second.image, class: 'img-fluid h-100 rounded-start' %>
            <% else %>
              <%= image_tag 'ivf2.jpg', class: 'img-fluid h-100 rounded-start' %>
            <% end %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%=@blogs.second.headline %></h5>
              <p class="card-text"><%= @blogs.second.description.to_plain_text.truncate(100)%></p>
              <p class="card-text"><small><%= @blogs.second.updated_at %></small></p>
            </div>
          </div>
        </div>
      </div>
      <div class="card mb-2">
        <div class="row g-0">
          <div class="col-md-4">
            <% if @blogs.third.image.present? %>
              <%= image_tag @blogs.third.image, class: 'img-fluid h-100 rounded-start' %>
            <% else %>
              <%= image_tag 'ivf2.jpg', class: 'img-fluid h-100 rounded-start' %>
            <% end %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%=@blogs.third.headline %></h5>
              <p class="card-text"><%= @blogs.third.description.to_plain_text.truncate(100)%></p>
              <p class="card-text"><small><%= @blogs.third.updated_at %></small></p>
            </div>
          </div>
        </div>
      </div>
      <div class="card">
        <div class="row g-0">
          <div class="col-md-4">
            <% if @blogs.fourth.image.present? %>
              <%= image_tag @blogs.fourth.image, class: 'img-fluid h-100 rounded-start' %>
            <% else %>
              <%= image_tag 'ivf2.jpg', class: 'img-fluid h-100 rounded-start' %>
            <% end %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%=@blogs.fourth.headline %></h5>
              <p class="card-text"><%= @blogs.fourth.description.to_plain_text.truncate(100)%></p>
              <p class="card-text"><small><%= @blogs.fourth.updated_at %></small></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <%# health Blogs %>
  <%= render "blogs/health_blog", blogs: @health_blogs %>

  <%# Technology Blogs %>
  <%= render "blogs/technology_blog", blogs: @technology_blogs %>

  <%# Politics Blogs %>
  <%= render "blogs/politic_blog", blogs: @technology_blogs %>

  <%# Must Read section %>
  <%= render "blogs/must_read_section", blogs: @blogs %>
</div>
