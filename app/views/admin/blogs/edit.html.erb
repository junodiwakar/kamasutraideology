<div class="container">
  <h1>Update Blog</h1>

  <%= form_with(model: @blog, url: admin_blog_path) do |form| %>
    <div class="field">
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>

    <div class="field">
      <%= form.label :categories %><br>
      <%= form.collection_check_boxes :category_ids, @categories, :id, :name %>
    </div>

    <div class="field">
      <%= form.label :headline %>
      <%= form.text_field :headline %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.rich_text_area :description , placeholder:"Write blog"%>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>

  <%= link_to 'Back', blogs_path %>
</div>
